<h3>New Corgi Form</h3>

<form role="form" action="/corgis" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_auth_token %>">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="corgi[name]" class="form-control" id="name">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <input type="text" name="corgi[description]" class="form-control" id="description">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
